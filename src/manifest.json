{
  "manifest_version": 3,
  "name": "PaperLens",
  "version": "0.1.0",
  "description": "Personal Research Paper Copilot",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "https://arxiv.org/*",
    "https://export.arxiv.org/*",
    "https://openreview.net/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arxiv.org/*",
        "https://openreview.net/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/components/sidepanel/index.html"
  },
  "action": {
    "default_popup": "src/components/popup/index.html",
    "default_icon": {
      "16": "src/icons/icon-16.png",
      "32": "src/icons/icon-32.png",
      "48": "src/icons/icon-48.png",
      "128": "src/icons/icon-128.png"
    }
  },
  "options_page": "src/components/options/index.html",
  "icons": {
    "16": "src/icons/icon-16.png",
    "32": "src/icons/icon-32.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/components/reader/index.html", "src/offscreen/index.html", "pdf.worker.min.mjs", "pdf.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
